<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings</title>
  <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
</head>

<body>
    {{>navbar}}
    <div class="m-4">
        <section class="h-100" style="background-color: #eee;">
            <div class="container h-100 py-5">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-10">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="fw-normal mb-0 text-black">My Bookings</h3>
                        </div>

                        <div class="card rounded-3 mb-4">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col ">
                                        <h3 class=" fw-normal mb-2">Date</h3>
                                    </div>
                                    <div class="col ">
                                        <h3 class=" fw-normal mb-2">Price</h3>
                                    </div>
                                    <div class="col">
                                        <h3 class=" fw-normal mb-2">Address</h3>
                                    </div>
                                    <div class="col">
                                        <h3 class=" fw-normal mb-2">Status</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{#each order}}
                        <div class="card rounded-3 mb-4">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col ">
                                        <p class="lead fw-normal mb-2">{{bookingDate}}</p>
                                    </div>
                                    <div class="col ">
                                        <p class="lead fw-normal mb-2">${{price}}</p>
                                    </div>
                                    <div class="col">
                                        <p class="lead fw-normal mb-2">{{address}}</p>
                                    </div>
                                    <div class="col">
                                        <p class="lead fw-normal mb-2" id="{{_id}}">{{status}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
    <h1></h1>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script>

        const socket = io('http://localhost:3000')
        socket.on('set',(data,_id) => {
            document.getElementById(_id).innerHTML = data
        })
    </script>
</body>

</html>