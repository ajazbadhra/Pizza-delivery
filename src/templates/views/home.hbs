<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
</head>

<body>
  {{>navbar}}

  <div class="m-4">
    {{#if msg}}
      <div class="alert alert-success d-flex align-items-center" role="alert">
        <div>
          {{msg}}
        </div>
      </div>
    {{/if}}
    <div class="gap-2 d-flex mb-5 mt-5 align-items-center justify-content-center">
      <form action="/category" method="post">
        <button type="submit" class="btn btn-outline-primary" value="all" name="action">All</button>
        <button type="submit" class="btn btn-outline-success" value="veg" name="action">Veg</button>
        <button type="submit" class="btn btn-outline-danger" value="non-veg" name="action">Non-Veg</button>
      </form>
    </div>
      <div class="row row-cols-1 row-cols-md-5 g-4">
        {{#each pizza}}
    <form action="/cart/addToCart" method="post">
        <div class="col">
          <div class="card h-100">
            <img src="{{this.img}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.desc}}</p>
              <h5 class="card-title">$ {{this.price}}</h5>

              <input id="form1" min="1" max="5" name="qty" value="1" type="number"
                class="form-control form-control-sm mb-4" />
              <button type="submit" class="btn btn-outline-primary" value="{{this._id}}" name="addToCart">Add To
                Cart</button>
            </div>
          </div>
        </div>
    </form>
        {{/each}}
      </div>
  </div>
  {{>animation}}
</body>

</html>