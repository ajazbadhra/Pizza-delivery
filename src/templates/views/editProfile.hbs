<html>
  <head>
    <title>EditProfile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
      addEventListener("load", function() { setTimeout(hideURLbar, 0); },
      false); function hideURLbar(){ window.scrollTo(0,1); }
    </script>
    <!-- Custom Theme files -->
    <link href="css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link
      href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i"
      rel="stylesheet"
    />
    <!-- //web font -->
  </head>
  <body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
      <h1>EditProfile</h1>
      <div class="main-agileinfo">
        <div class="agileits-top">
          <form action="/edit" method="post">
            <label for="fname">First Name</label>
            <input
              id="fname"
              class="text"
              type="text"
              name="firstname"
              placeholder="First Name"
              required=""
              value={{firstname}}
            /><br />
            <label for="lname">Last Name</label>
            <input
              id="lname"
              class="text"
              type="text"
              name="lastname"
              placeholder="Last Name"
              required=""
              value={{lastname}}
            />
            <input
              id="mail"
              class="text email"
              type="hidden"
              name="email"
              placeholder="Email"
              required=""
              value={{email}}
            />
            <label for="pn">Phone Number</label>
            <input
              id="pn"
              class="text"
              type="text"
              name="phonenumber"
              placeholder="phone number"
              required=""
              value={{phonenumber}}
            /><br />
            <label for="pass">Password</label>
            <input
              id="pass"
              class="text"
              type="password"
              name="password"
              placeholder="Password"
              required=""
              value={{password}}
            />
            <label for="cpass">Confirm Password</label>
            <input
              id="cpass"
              class="text w3lpass"
              type="password"
              name="cpasswords"
              placeholder="Confirm Password"
              required=""
              value={{password}}
            />
            <label> Address</label><br />
            {{#each address}}
              {{!-- <input
                class="text w3lpass"
                type="text"
                name="address"
                placeholder="Address"
                required=""
                value={{this}}
              /> --}}
              <textarea id="text w3lpass" name="address">
                {{this}}
              </textarea><br />
            {{/each}}
            <div class="wthree-text">
              <div class="clear"> </div>
            </div>
            <input type="submit" value="Submit" />
          </form>
        </div>
      </div>
      <ul class="colorlib-bubbles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
    </div>
    <!-- //main -->
  </body>
</html>